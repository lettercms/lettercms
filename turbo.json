{
  "$schema": "https://turbo.build/schema.json",
  "pipeline": {
    "build": {
      "inputs": [
        "src/**"
      ],
      "outputs": [
        ".next/**",
        "!.next/cache/**"
      ]
    },
    "lint": {
      "inputs": [
        "src/**",
        "lib/**",
        "acccounts/**",
        "blogs/**",
        "comments/**",
        "pages/**",
        "payments/**",
        "posts/**",
        "socials/**",
        "stats/**",
        "usages/**",
        "users/**"
      ]
    },
    "dev": {
      "cache": false,
      "persistent": true
    }
  }
}